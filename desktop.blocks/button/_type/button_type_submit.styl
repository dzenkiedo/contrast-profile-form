.button_type_submit
  &.button_theme_islands
    &.button_type_submit
    &.button_view_action
        width 25rem
        height 5rem
        position relative
        margin 0 auto
        background-color #222629
        line-height 5rem
        font-size 1.6rem
        color #fff
        text-align center
        box-shadow 0 1px 1px rgba(0,0,0,.2), 0 2px 4px rgba(0,0,0,.2), 0 5px 6px rgba(0,0,0,.2)
        cursor pointer
        box-sizing border-box
        border none
        display block
        font-weight 300
        font-family 'Open Sans'
        text-decoration none
      &:before
        position absolute
        background-color #222629
    &.button_view_action
      &:before
        position absolute
        background-color #222629
      &.button_pressed:before
        background-color #393e43
        box-shadow inset 0 1px 1px rgba(0,0,0,.2), inset 0 2px 4px rgba(0,0,0,.2), inset 0 5px 6px rgba(0,0,0,.2)
        text-shadow 0 1px 1px rgba(0,0,0,.2), 0 2px 4px rgba(0,0,0,.2), 0 5px 6px rgba(0,0,0,.2)
      &.button_hovered:before
        background-color #393e43

